{
  "name": "ethereum-scaffold-contracts",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js"
  },
  "scripts": {
    "ip": "hostname -i | awk '{print $1}'",
    "chain": "localip=$(npm run ip --silent) docker run -it --rm -p 8545:8545 -p 26656:26656 -p 9191:9191 -p 9192:9192 -p 9292:9292 arcologynetwork/devnet -f http://$localip:7545 -b http://$localip:3500 -s http://$localip:8545 -r true -m false",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network arcology",
    "test": "hardhat test --network arcology",
    "monitor": "arcology.net-monitor http://$(npm run ip --silent):8545"
  },
  "devDependencies": {
    "@arcologynetwork/concurrentlib": "^2.2.0",
    "@arcologynetwork/frontend-tools": "^1.0.3",
    "@arcologynetwork/frontend-util": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@solidstate/hardhat-abi-exporter": "^3.0.0",
    "dotenv": "^17.2.1",
    "hardhat": "^3.0.4"
  }
}
